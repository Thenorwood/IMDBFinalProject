<Page x:Class="FinalProjectIMDB.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProjectIMDB.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IMDB Database Explorer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#343A40" Padding="20,30">
            <TextBlock Text="IMDB Database Explorer" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Welcome to the IMDB Database Explorer" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,20"/>

            <!-- Summary Cards -->
            <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Movies Card -->
                <Border Width="200" 
                        Height="150" 
                        Background="#F8F9FA" 
                        BorderBrush="#DEE2E6" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="10">
                    <StackPanel VerticalAlignment="Center" Margin="15">
                        <TextBlock Text="Movies" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalMovies}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                        <Button Content="Browse Movies" 
                                Margin="0,15,0,0"
                                Padding="5"
                                Background="#0D6EFD"
                                Foreground="White"
                                BorderThickness="0"
                                Click="BrowseMovies_Click"/>
                    </StackPanel>
                </Border>

                <!-- Directors Card -->
                <Border Width="200" 
                        Height="150" 
                        Background="#F8F9FA" 
                        BorderBrush="#DEE2E6" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="10">
                    <StackPanel VerticalAlignment="Center" Margin="15">
                        <TextBlock Text="Directors" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalDirectors}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                        <Button Content="Browse Directors" 
                                Margin="0,15,0,0"
                                Padding="5"
                                Background="#6C757D"
                                Foreground="White"
                                BorderThickness="0"
                                Click="BrowseDirectors_Click"/>
                    </StackPanel>
                </Border>

                <!-- Genres Card -->
                <Border Width="200" 
                        Height="150" 
                        Background="#F8F9FA" 
                        BorderBrush="#DEE2E6" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="10">
                    <StackPanel VerticalAlignment="Center" Margin="15">
                        <TextBlock Text="Genres" 
                                  FontSize="20" 
                                  FontWeight="SemiBold" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalGenres}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                        <Button Content="Browse Genres" 
                                Margin="0,15,0,0"
                                Padding="5"
                                Background="#198754"
                                Foreground="White"
                                BorderThickness="0"
                                Click="BrowseGenres_Click"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#343A40" Padding="10">
            <TextBlock Text="PROG 2500 - Final Project" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>