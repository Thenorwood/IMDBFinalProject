<UserControl x:Class="FinalProjectIMDB.Views.DirectorsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProjectIMDB.Views"
             xmlns:vm="clr-namespace:FinalProjectIMDB.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:DirectorsPageViewModel />
    </UserControl.DataContext>

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkBlue" Offset="0"/>
            <GradientStop Color="Purple" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#343A40" Padding="20,15">
            <StackPanel>

                <TextBlock Text="Directors" 
                    FontSize="28" 
                    FontWeight="Bold" 
                    Foreground="White"/>
                <TextBlock Text="Browse movie directors" 
                    FontSize="14" 
                    Foreground="#ADB5BD"/>
            </StackPanel>
        </Border>

        <!-- Directors List -->
        <DataGrid Grid.Row="1" 
               ItemsSource="{Binding Directors}" 
               AutoGenerateColumns="False"
               IsReadOnly="True"
               GridLinesVisibility="Horizontal"
               BorderThickness="0"
               Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name ID" Binding="{Binding NameId}" Width="*"/>
                <DataGridTextColumn Header="Title ID" Binding="{Binding TitleId}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
