<UserControl x:Class="FinalProjectIMDB.Views.TitlesPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:FinalProjectIMDB.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:TitlesPageViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- VHS-themed styles -->
        <Style x:Key="VhsButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VhsDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#1A1A3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Purple"/>
            <Setter Property="RowBackground" Value="#2A2A5D"/>
            <Setter Property="AlternatingRowBackground" Value="#1E1E42"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="30"/>
        </Style>

        <Style x:Key="VhsColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3A3A7D"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Yellow"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>

        <!-- Runtime minutes formatter -->
        <Style x:Key="RuntimeStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="{Binding RuntimeMinutes, StringFormat={}{0} min}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="20" BorderBrush="Yellow" BorderThickness="0,0,0,3">
            <StackPanel>
                <TextBlock Text="MOVIE CATALOG" 
                         FontSize="36" 
                         FontWeight="Bold" 
                         Foreground="Gold"
                         FontFamily="Cooper Black"
                         HorizontalAlignment="Center"/>
                <TextBlock Text="Browse our collection of films" 
                         FontSize="18" 
                         Foreground="Yellow"
                         FontFamily="Arial Black"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filter Controls -->
        <Border Grid.Row="1" Background="#2A2A5D" Padding="15" BorderBrush="#4A4A8D">
            <StackPanel Orientation="Horizontal">
                <!-- Search -->
                <StackPanel Margin="0,0,15,0" Width="300">
                    <TextBlock Text="Search Movies" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SearchText}" 
                           Padding="5" 
                           Background="#3A3A7D" 
                           Foreground="White"/>
                </StackPanel>

                <!-- Year Range -->
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,10,0" Width="100">
                        <TextBlock Text="From Year" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding StartYearFilter}" 
                               Padding="5" 
                               Background="#3A3A7D" 
                               Foreground="White"/>
                    </StackPanel>
                    <StackPanel Width="100">
                        <TextBlock Text="To Year" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EndYearFilter}" 
                               Padding="5" 
                               Background="#3A3A7D" 
                               Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <!-- Filter Buttons -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="15,0,0,0">
                    <Button Content="RESET" 
                          Command="{Binding ResetFiltersCommand}"
                          Style="{StaticResource VhsButton}"
                          Background="#6C757D"
                          Margin="0,0,10,0"/>
                    <Button Content="APPLY" 
                          Command="{Binding ApplyFiltersCommand}"
                          Style="{StaticResource VhsButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Movie DataGrid -->
        <DataGrid Grid.Row="2"
                ItemsSource="{Binding TitlesView}"
                AutoGenerateColumns="False"
                Style="{StaticResource VhsDataGrid}"
                ColumnHeaderStyle="{StaticResource VhsColumnHeader}"
                Margin="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="PRIMARY TITLE" 
                                  Binding="{Binding PrimaryTitle}" 
                                  Width="3*"/>
                <DataGridTextColumn Header="YEAR" 
                                  Binding="{Binding StartYear}" 
                                  Width="80"/>
                <DataGridTextColumn Header="RUNTIME" 
                                  Width="100"
                                  ElementStyle="{StaticResource RuntimeStyle}"/>
                <DataGridTextColumn Header="TYPE" 
                                  Binding="{Binding TitleType}" 
                                  Width="100"/>
                <DataGridTemplateColumn Header="ACTION" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="DETAILS" 
                                  Style="{StaticResource VhsButton}"
                                  Background="#0D6EFD"
                                  Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>