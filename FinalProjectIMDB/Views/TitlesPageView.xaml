<UserControl x:Class="FinalProjectIMDB.Views.TitlesPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProjectIMDB.Views"
             xmlns:vm="clr-namespace:FinalProjectIMDB.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:TitlesPageViewModel />
    </UserControl.DataContext>

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkBlue" Offset="0"/>
            <GradientStop Color="Purple" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Style="{StaticResource sectionBorderStyle}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Style="{StaticResource sectionBorderStyle}">
                    <StackPanel>
                        <Border Background="DarkBlue" Style="{StaticResource sectionBorderStyle}">
                            <TextBlock Text="Films" Foreground="Yellow" HorizontalAlignment="Center" FontSize="54" FontWeight="Bold" FontFamily="Cooper Black"/>

                        </Border>
                    </StackPanel>
                </Border>

                <TextBlock Text="Welcome to IMDB Explorer"/>
                <TextBlock Text="Call Now! Order Today! No Money Down!"/>
            </StackPanel>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="20,15" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filter Title -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" 
                           Text="Filter Options" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                    <!-- Search Box -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Search" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SearchText}" Padding="5"/>
                    </StackPanel>

                    <!-- Genre Filter -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Genre" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Genres}" 
                              SelectedValuePath="GenreId" 
                              DisplayMemberPath="Name"
                              SelectedValue="{Binding SelectedGenreId}" 
                              Padding="5"/>
                    </StackPanel>

                    <!-- Year Range Filters -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Start Year" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding StartYearFilter}" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="3">
                        <TextBlock Text="End Year" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding EndYearFilter}" Padding="5"/>
                    </StackPanel>
                </Grid>

                <!-- Filter Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="Reset" 
                        Command="{Binding ResetFiltersCommand}"
                        Margin="10,0,5,0"
                        Padding="10,5"
                        Background="#6C757D"
                        Foreground="White"
                        BorderThickness="0" Click="Button_Click_1"/>

                    <Button Content="Apply Filters" 
                        Command="{Binding ApplyFiltersCommand}"
                        Margin="5,0,0,0"
                        Padding="10,5"
                        Background="#0D6EFD"
                        Foreground="White"
                        BorderThickness="0" Click="Button_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Movie List -->
        <Grid Grid.Row="2">
            <DataGrid ItemsSource="{Binding TitlesView}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="0"
                  RowBackground="White"
                  AlternatingRowBackground="#F8F9FA">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding PrimaryTitle}" Width="3*"/>
                    <DataGridTextColumn Header="Original Title" Binding="{Binding OriginalTitle}" Width="3*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding TitleType}" Width="*"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding StartYear}" Width="*"/>
                    <DataGridTextColumn Header="Runtime (min)" Binding="{Binding RuntimeMinutes}" Width="*"/>
                    <DataGridTemplateColumn Header="Details" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                    Padding="5,2"
                                    Background="#0D6EFD"
                                    Foreground="White"
                                    BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
