<UserControl x:Class="FinalProjectIMDB.Views.TitlesPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProjectIMDB.Views"
             xmlns:vm="clr-namespace:FinalProjectIMDB.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Subtle blur for text elements -->
        <BlurEffect x:Key="TextBlur" Radius="1.2" KernelType="Gaussian"/>

        <!-- Style for infomercial buttons -->
        <Style x:Key="InfomercialButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid style with subtle VHS influence -->
        <Style x:Key="VhsDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#1A1A3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Purple"/>
            <Setter Property="RowBackground" Value="#2A2A5D"/>
            <Setter Property="AlternatingRowBackground" Value="#1E1E42"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="VhsColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3A3A7D"/>
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Yellow"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>
    </UserControl.Resources>

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkBlue" Offset="0"/>
            <GradientStop Color="Purple" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="20" BorderBrush="Yellow" BorderThickness="0,0,0,3">
            <StackPanel>
                <TextBlock Text="FILM COLLECTION" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="Gold"
                          FontFamily="Cooper Black"
                          HorizontalAlignment="Center"
                          Effect="{StaticResource TextBlur}"/>
                <TextBlock Text="Browse our exclusive movie selection!" 
                          FontSize="18" 
                          Foreground="Yellow"
                          FontFamily="Arial Black"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" Background="#2A2A5D" Padding="20,15" BorderBrush="#4A4A8D" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filter Title -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" 
                           Text="FILTER OPTIONS" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="Gold"
                           FontFamily="Arial Black"
                           Margin="0,0,0,10"/>

                    <!-- Search Box -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Search" Margin="0,0,0,5" Foreground="White"/>
                        <TextBox Text="{Binding SearchText}" Padding="5" Background="#3A3A7D" Foreground="White"/>
                    </StackPanel>

                    <!-- Genre Filter -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Genre" Margin="0,0,0,5" Foreground="White"/>
                        <ComboBox ItemsSource="{Binding Genres}" 
                              SelectedValuePath="GenreId" 
                              DisplayMemberPath="Name"
                              SelectedValue="{Binding SelectedGenreId}" 
                              Padding="5"
                              Background="#3A3A7D"
                              Foreground="White"/>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Start Year" Margin="0,0,0,5" Foreground="White"/>
                        <TextBox Text="{Binding StartYearFilter}" Padding="5" Background="#3A3A7D" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="3">
                        <TextBlock Text="End Year" Margin="0,0,0,5" Foreground="White"/>
                        <TextBox Text="{Binding EndYearFilter}" Padding="5" Background="#3A3A7D" Foreground="White"/>
                    </StackPanel>
                </Grid>

                <!-- Filter Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="RESET" 
                        Command="{Binding ResetFiltersCommand}"
                        Style="{StaticResource InfomercialButton}"
                        Background="#6C757D"
                        Margin="10,0,5,0"/>

                    <Button Content="APPLY FILTERS" 
                        Command="{Binding ApplyFiltersCommand}"
                        Style="{StaticResource InfomercialButton}"
                        Background="#FF6C00"
                        Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Movie List  -->
        <DataGrid Grid.Row="2"
              ItemsSource="{Binding TitlesView}" 
              AutoGenerateColumns="False" 
              IsReadOnly="True"
              Style="{StaticResource VhsDataGrid}"
              ColumnHeaderStyle="{StaticResource VhsColumnHeader}"
              Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="TITLE" Binding="{Binding PrimaryTitle}" Width="3*" Foreground="White"/>
                <DataGridTextColumn Header="ORIGINAL TITLE" Binding="{Binding OriginalTitle}" Width="3*" Foreground="White"/>
                <DataGridTextColumn Header="TYPE" Binding="{Binding TitleType}" Width="*" Foreground="White"/>
                <DataGridTextColumn Header="YEAR" Binding="{Binding StartYear}" Width="*" Foreground="White"/>
                <DataGridTextColumn Header="RUNTIME" Binding="{Binding RuntimeMinutes}" Width="*" Foreground="White"/>
                <DataGridTemplateColumn Header="DETAILS" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="VIEW" 
                                Style="{StaticResource InfomercialButton}"
                                Background="#0D6EFD"
                                Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- VHS distortion overlay -->
        <Rectangle Grid.RowSpan="3" Opacity="0.1">
            <Rectangle.Fill>
                <VisualBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
                    <VisualBrush.Visual>
                        <Canvas>
                            <Rectangle Width="50" Height="50" Fill="Black"/>
                            <Line X1="0" Y1="0" X2="50" Y2="50" Stroke="White" StrokeThickness="0.1"/>
                            <Line X1="50" Y1="0" X2="0" Y2="50" Stroke="White" StrokeThickness="0.1"/>
                        </Canvas>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Rectangle.Fill>
            <Rectangle.Effect>
                <BlurEffect Radius="1"/>
            </Rectangle.Effect>
        </Rectangle>
    </Grid>
</UserControl>